build_image() {
    local OS_IMAGE="$1"
    local DOCKER_FILE="$2"
    local PHP_VERSION="$3"
    local DOCKER_TAG="$4"
    if ! docker build --build-arg OS_IMAGE="${OS_IMAGE}" --build-arg PHP_VERSION="${PHP_VERSION}" -f "${DOCKER_FILE}" -t "humaid/larahost:${DOCKER_TAG}" .; then
        printf "Error building base Docker image\n" >&2
        return 1
    fi
}



